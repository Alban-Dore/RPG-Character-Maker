<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgChoose"
        android:layout_width="110dp"
        android:layout_height="110dp" />

    <LinearLayout
        android:id="@+id/linearChoose"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:text="Kraz Pouy"
            android:id="@+id/nameChoose"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp"
            android:text="Level 6"
            android:gravity="center"
            android:id="@+id/levelChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="Archer"
                android:id="@+id/classChoose"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="Bestial"
                android:id="@+id/raceChoose"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/deleteChoose"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/btn_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

</LinearLayout>